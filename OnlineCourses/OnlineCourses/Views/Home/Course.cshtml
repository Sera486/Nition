@addTagHelper "OnlineCourses.TagHelpers.CoursePreviewTagHelper, OnlineCourses"
@model OnlineCourses.Models.HomeViewModels.CourseViewModel
@{
    ViewData["Title"] = "Courses";
}

<h2>@ViewData["Title"].</h2>
<h3>@ViewData["Message"]</h3>

<div id="searchDiv">
    <div class="container-fluid">
	
        <div class="col-md-8 col-md-offset-2" >
            <form asp-controller="Home" asp-action="Course" method="get" class="form-inline">
                <div class="form-group col-md-8">
                    <input name="search" type="text" class="form-control" id="searchInput" placeholder="Введіть назву курсу">
                </div>
                <span class="button-checkbox">
                    <button type="button" class="btn" data-color="info">Шукати в описi</button>
                    <input name="desc" type="checkbox" value="true" class="hidden"/>
                </span>
                <div class="col-sm-offset-1 col-sm-2">
                    <select name="theme" asp-for="ThemeID" asp-items="@ViewBag.Themes" class="form-control" id="selRole">
                        <option value="0">Оберіть тему</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <button  type="submit" class="btn btn-default" id="buttSearch">Пошук</button>
                </div>
            </form>
        </div>
	
    </div>
</div>

<div class="container-fluid">
    @foreach (var course in Model)
    {
        <course-preview course="@course"></course-preview>
    }
</div>

@if (Model.PageViewModel.HasPreviousPage)
{
    <a asp-controller="Home" asp-action="Course"
       asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
       asp-route-search="@(Model.SearchString)"
       asp-route-desc="@(Model.SearchInDescription)"
       asp-route-theme="@(Model.ThemeID)"
       class="btn btn-default btn">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Назад
    </a>
}
@if (Model.PageViewModel.HasNextPage)
{
    <a asp-controller="Home" asp-action="Course"
       asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
       asp-route-search="@(Model.SearchString)"
       asp-route-desc="@(Model.SearchInDescription)"
       asp-route-theme="@(Model.ThemeID)"
       class="btn btn-default btn">
    Вперед
       <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
}