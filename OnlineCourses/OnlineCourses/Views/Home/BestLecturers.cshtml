@model List<ApplicationUser>
@{
    ViewData["Title"] = "Провідні лектори";
}
<!--*****************//////////MIDDLE///////////*********************-->
<!--*****************//////////MIDDLE///////////*********************-->
<!--*****************//////////MIDDLE///////////*********************-->
<div class="container-fluid" id="gap">
    <div class="col-md-12" id="gap-in">
        <h1>@ViewData["Title"]</h1>
    </div>
</div>
<!--*****************//////////endMIDDLE///////////*********************-->
<!--*****************//////////endMIDDLE///////////*********************-->
<!--*****************//////////endMIDDLE///////////*********************-->

<div class="container-fluid card-lector-all">
    <div class="col-md-10 col-md-offset-1">
        @for (int i = 0; i < Model.Count; i++)
        {

            <div class="col-md-12 card-lector">
                
                    <div class="col-md-3 text-center">
                        <a asp-controller="Manage" asp-action="Index" asp-route-id="@Model[i].Id">
                            <figure class="text-center center-block">
                                <img src="~/@Model[i].ValidImageURL" alt="Lector" class="img-responsive text-center img-circle" style="width:auto; height:11vmax;padding:1vmin; margin: 0 auto;">
                                <hr class="no-margin no-padding hr-card-lector" />
                                <figcaption>
                                    <p class="name no-margin text-center card-lector-name">@Model[i].FullName</p>
                                    <hr class="no-margin no-padding hr-card-lector" />
                                </figcaption>
                            </figure>
                        </a>

                        <div class="social-networks-contacts text-center">
                            <a href="#" class="twitter"><i class="fa fa-twitter"></i></a>
                            <a href="#" class="facebook"><i class="fa fa-facebook-official"></i></a>
                            <a href="#" class="google"><i class="fa fa-google-plus"></i></a>
                        </div>
                    </div>

                    <div class="col-md-9 no-margin no-padding">
                        <p style="color:black;" class="text-center">@Model[i].AboutMe</p>
                        <hr class="no-margin no-padding hr-card-lector" />
                        <form asp-controller="Manage" asp-action="Index" asp-route-id="@Model[i].Id">
                        <button type="submit" class="btn btn-default btn-block btn-lector-card">Далі-></button>
                        </form>
                    </div>
                </div>
           
        }
            </div>
        </div>
  