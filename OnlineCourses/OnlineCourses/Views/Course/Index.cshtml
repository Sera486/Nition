@addTagHelper "OnlineCourses.TagHelpers.CoursePreviewTagHelper, OnlineCourses"
@using OnlineCourses.Models.CourseViewModels
@model CourseViewModel
@{
    ViewData["Title"] = "Courses";
}

<div id="searchDiv">
    <div class="container-fluid">
	
        <div class="col-md-10 col-md-offset-1" >
            <form asp-controller="Course" asp-action="Index" method="get" class="form-inline">
                <div class="form-group col-md-5">
                    <input name="search" type="text" class="form-control" id="searchInput" placeholder="Введіть назву курсу">
                </div>
                @*<div class="form-group col-md-2">
                    <span class="button-checkbox">
                        <button type="button" class="btn btn-block" data-color="info">Шукати в описi</button>
                        <input style="width:100%;" name="desc" type="checkbox" value="true" class="hidden"/>
                    </span>
                </div>*@
                <div class="col-md-2">
                    <select name="theme" asp-for="ThemeID" asp-items="@ViewBag.Themes" class="form-control" id="selRole">
                        <option value="0">Оберіть тему</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <button  type="submit" class="btn btn-default btn-block" id="buttSearch">Пошук</button>
                </div>
            </form>
        </div>
	
    </div>
</div>

<div class="container-fluid">
    @foreach (var course in Model)
    {
        <course-preview course="@course"></course-preview>
    }
</div>

@if (Model.PageViewModel.HasPreviousPage)
{
    <a asp-controller="Course" asp-action="Index"
       asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
       asp-route-search="@(Model.SearchString)"
       asp-route-desc="@(Model.SearchInDescription)"
       asp-route-theme="@(Model.ThemeID)"
       class="btn btn-default btn">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Назад
    </a>
}
@if (Model.PageViewModel.HasNextPage)
{
    <a asp-controller="Course" asp-action="Index"
       asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
       asp-route-search="@(Model.SearchString)"
       asp-route-desc="@(Model.SearchInDescription)"
       asp-route-theme="@(Model.ThemeID)"
       class="btn btn-default btn">
    Вперед
       <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
}