@addTagHelper "OnlineCourses.TagHelpers.CoursePreviewTagHelper, OnlineCourses"
@using OnlineCourses.Models.LecturerViewModels
@model CourseListViewModel
@{
    ViewData["Title"] = "Створені курси";
}

<div id="searchDiv">
    <div class="container-fluid">

        <div class="col-md-10 col-md-offset-1">
            <form asp-controller="Lecturer" asp-action="CourseList" method="get" class="form-inline">
                <div class="form-group col-md-5 col-sm-12">
                    <input name="search" type="text" class="form-control" id="searchInput" placeholder="Введіть назву курсу">
                </div>
                <div class="col-md-3 col-sm-12">
                    <button type="submit" class="btn btn-default btn-block" id="buttSearch">Пошук</button>
                </div>
            </form>
        </div>

    </div>
</div>

<div class="container-fluid">
    @foreach (var course in Model)
    {
        <course-preview course="@course" show-status="true"></course-preview>
    }
</div>

@if (Model.PageViewModel.HasPreviousPage)
{
    <a asp-controller="Course" asp-action="Index"
       asp-route-page="@(Model.PageViewModel.PageNumber - 1)"
       asp-route-search="@(Model.SearchString)"
       class="btn btn-default btn">
        <i class="glyphicon glyphicon-chevron-left"></i>
        Назад
    </a>
}
@if (Model.PageViewModel.HasNextPage)
{
    <a asp-controller="Course" asp-action="Index"
       asp-route-page="@(Model.PageViewModel.PageNumber + 1)"
       asp-route-search="@(Model.SearchString)"
       class="btn btn-default btn">
        Вперед
        <i class="glyphicon glyphicon-chevron-right"></i>
    </a>
}