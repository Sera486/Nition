@addTagHelper "OnlineCourses.TagHelpers.CoursePreviewTagHelper, OnlineCourses"
@model ApplicationUser
@{
    ViewData["Title"] = "Профіль користувача(лектор)";
}

<div class="container-fluid" id="gap">
    <div class="col-md-12" id="gap-in">
        <h1>@ViewData["Title"].</h1>
        <p class="text-success">@ViewData["StatusMessage"]</p>
        <h2>@Model.UserName</h2>
    </div>
</div>

<!--*****************//////////endMIDDLE///////////*********************-->
<!--*****************//////////endMIDDLE///////////*********************-->
<!--*****************//////////endMIDDLE///////////*********************-->
<style>
    .nav-tabs li a {
        color: #777;
    }
</style>
<div class="container-fluid">

    <div class="row col-md-10 col-md-offset-1" id="imgUser" style="margin-bottom:2vmin;">
        <div class="col-sm-1 animated slideInLeft" style=" margin-left: 30;">
            <img class="img-responsive img-circle" width="auto" height="100" src="~/@Model.ValidImageURL" alt="..." />
        </div>
        <div class="col-sm-4 animated slideInLeft">
            <h1>@Model.FullName</h1> </div>
        <div class="col-sm-4 animated slideInLeft edit-butt-account-div"><button class="btn btn-default btn-lg edit-butt-account text-center">Редагувати профіль</button></div>  
    </div>

    <div class="col-md-10 col-md-offset-1">

        <ul class="nav nav-tabs">

            <li class="active"><a data-toggle="tab" href="#home">Опис користувача</a></li>
            <li><a data-toggle="tab" href="#menu1">Особисті дані та контакти</a></li>
            <li><a data-toggle="tab" href="#menu2">Створені курси</a></li>
        </ul>

        <div class="tab-content">
            <div id="home" class="tab-pane fade in active">
                <p>@Model.AboutMe</p>
            </div>
            <div id="menu1" class="tab-pane fade">
                <hr>
                <strong>Email:</strong> @Model.Email
                <hr>
                <strong>Контакти:</strong> @Model.Contacts
                <hr>
            </div>
            <div id="menu2" class="tab-pane fade">
               
                    @foreach (var course in Model.CreatedCourses)
                    {  <div class="container col-md-12 col-lg-8 col-lg-offset-2">
                    <course-preview course="@course"></course-preview>
                </div>
                    }
               
            </div>
        </div>
    </div>
</div>
