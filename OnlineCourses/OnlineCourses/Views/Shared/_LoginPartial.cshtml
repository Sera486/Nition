@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
        <ul class="nav navbar-nav navbar-right">
            <li class="userImgHead">
                <a class="navbar-brand userImgHead" asp-controller="Manage" asp-action="Index" title="Manage">
                    <img style="padding-bottom: 24px;" class="img-responsive img-circle userImgHead" src="~/@UserManager.GetUserAsync(User).Result.ValidImageURL" alt=""> 
                </a>
            </li>
            <li>
                <a asp-controller="Manage" asp-action="Index" title="Manage">@UserManager.GetUserName(User)</a>
            </li>
            <li>
                <button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button>
            </li>
        </ul>

}
else
{
    <li><a asp-controller="Account" asp-action="Register"><span class="glyphicon glyphicon-user"></span>Зареєструватися</a></li>
    <li><a href="#" data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-log-in"></span>Увійти</a></li>
}
